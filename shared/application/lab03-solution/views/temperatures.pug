extends layout
append content
    body
        div.container
            div.content
                h1.center-block= title
                table.table.table-striped.table-bordered.table-hover.table-condensed
                    thead
                        tr
                            th Station
                            th Temperature
                            th Date
                    tbody
                        each item in temperatures
                            tr
                                td #{item.station}
                                td=parseFloat(item.temperature).toFixed(2)
                                td #{item.year} - #{item.month}
                        else
                            tr
                                td=err
                                td N/A
                                td N/A
        div.footer